{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "jsx": "preserve",
    "lib": [
      "es2020",
      "dom"
    ],
    "module": "esnext",
    "target": "es2020",
    "moduleResolution": "bundler",
    "allowJs": true,
    "incremental": true,
    "resolveJsonModule": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    // NO noEmit - allows proper TypeScript project references
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    // Enhanced strict checking
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    // Additional strict rules
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "../../libs/shared-ui/src/**/*.ts",
    "../../libs/shared-ui/src/**/*.tsx",
    "../../libs/shared-utils/src/**/*.ts"
  ],
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    ".next/**/*"
  ]
}
